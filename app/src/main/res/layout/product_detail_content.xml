<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backround_color"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/red_button"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#fff"
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="thích và"
                    android:textColor="#fff"
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#fff"
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bình luận"
                    android:textColor="#fff"
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"
                    />
                <ImageButton
                    android:layout_width="35dp"
                    android:scaleType="fitXY"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/red_button"
                    android:layout_marginLeft="73dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/icon_like_off"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="#fff"
                android:layout_marginTop="20px"
                android:layout_marginLeft="25px"
                android:layout_marginRight="25px"
                >
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/unknown_user"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User"
                        android:textSize="13sp"
                        android:textColor="@color/red_button"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Điểm 3 sản phẩm 2"
                        android:textColor="@color/text_black"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
                <ImageButton
                    android:layout_width="10dp"
                    android:layout_height="13dp"
                    android:src="@drawable/sidemenu_next_arrow_pressed"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="83dp"
                    android:background="#fff"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#fff"
                android:orientation="horizontal"
                android:layout_marginTop="20px"
                android:layout_marginLeft="25px"
                android:layout_marginRight="25px"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_umbrella"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mua hàng trên MOKI được đảm"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_black"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="bảo"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_black"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xem chính sách trả hàng và hoàn"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="tiền"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#fff"
                android:orientation="horizontal"
                android:layout_marginTop="4px"
                android:layout_marginLeft="25px"
                android:layout_marginRight="25px"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_share_product"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chia sẻ với bạn bè"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_black"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:orientation="vertical"
                android:layout_marginTop="20px"
                android:layout_marginLeft="25px"
                android:layout_marginRight="25px"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="name product"
                    android:textColor="@color/text_black"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/icon_clock"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="10sp"
                        android:text="1 ngày trước"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="#fff"
                android:layout_marginTop="20px"
                android:layout_marginLeft="25px"
                android:layout_marginRight="25px"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/category_icon"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Danh mục"
                        android:textSize="14sp"
                        android:textColor="@color/text_black"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="#fff"
                android:layout_marginTop="4px"
                android:layout_marginLeft="25px"
                android:layout_marginRight="25px"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/brand_icon"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nhãn hiệu"
                        android:textSize="14sp"
                        android:textColor="@color/text_black"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="#fff"
                android:layout_marginTop="4px"
                android:layout_marginLeft="25px"
                android:layout_marginRight="25px"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/status_product_icon"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trạng thái"
                        android:textSize="14sp"
                        android:textColor="@color/text_black"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="#fff"
                android:layout_marginTop="4px"
                android:layout_marginLeft="25px"
                android:layout_marginRight="25px"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/location_icon"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nơi bán"
                        android:textSize="14sp"
                        android:textColor="@color/text_black"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Trở thành người bình luận đầu tiên"
                    android:textColor="#fff"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:textAllCaps="false"
                    android:textSize="13sp"
                    android:background="@layout/login_button_background"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/NAVI_BG_IMAGE"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="Giá: 20,000,000 VNĐ"
                    android:textColor="#fff"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/NAVI_BG_IMAGE"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:text="Mua"
                    android:textColor="#fff"
                    android:background="@color/GREEN_COLOR"
                    android:textSize="16sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>