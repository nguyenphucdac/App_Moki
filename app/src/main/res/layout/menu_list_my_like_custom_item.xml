<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_product_my_like"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    android:background="#fff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:orientation="horizontal"
        android:background="#fff"
        >
        <ImageView
            android:id="@+id/image_product_my_like"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:src="@drawable/iphone7"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/name_product_my_like"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="iphone 7 red"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textSize="11sp"
                />
            <TextView
                android:id="@+id/price_product_my_like"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="20,000,000 "
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="@color/red_button"
                android:textSize="11sp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/sidemenu_next_arrow_pressed"
            android:foregroundGravity="right"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/backround_color"></LinearLayout>
</LinearLayout>

