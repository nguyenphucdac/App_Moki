<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        >
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_tutorial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicator_tutorial"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        app:ci_drawable="@layout/selected_dot"
        app:ci_drawable_unselected="@layout/unselected_dot"
        />
        <Button
            android:visibility="gone"
            android:id="@+id/btn_skip_tutorial"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Bá» qua"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"
            android:background="@layout/login_button_background"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</LinearLayout>
