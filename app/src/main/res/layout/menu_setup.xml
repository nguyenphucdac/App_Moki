<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/draw_menu_news"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        >
        <FrameLayout
            android:id="@+id/news_header"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            >
            <ImageButton
                android:id="@+id/btn_menu_news"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_menu"
                android:scaleType="fitXY"
                android:background="#fff"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Thiết lập"
                android:textColor="@color/red_button"
                android:gravity="center"
                />

        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/red_button"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cài đặt tài khoản"
                android:gravity="center_vertical"
                android:textColor="@color/text_black"
                android:textStyle="bold"
                android:textSize="12sp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/backround_color"
            >
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:src="@drawable/setting_home_icon"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:text="Trang của tôi"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/text_black"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/sidemenu_next_arrow_normal"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/backround_color"
            >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:src="@drawable/setting_address_icon"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:text="Địa chỉ của tôi"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/text_black"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/sidemenu_next_arrow_normal"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/backround_color"
            >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:src="@drawable/setting_password_icon"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:text="Đổi mật khẩu"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/text_black"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/sidemenu_next_arrow_normal"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/backround_color"
            >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:src="@drawable/sidemenu_icon_exhibit_normal"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:text="Danh sách chặn"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/text_black"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/sidemenu_next_arrow_normal"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/backround_color"
            >
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Thông tin tài khoản"
                android:gravity="center_vertical"
                android:textColor="@color/text_black"
                android:textStyle="bold"
                android:textSize="12sp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/backround_color"
            >
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:src="@drawable/setting_account_icon"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:text="Tài khoản"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/text_black"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/sidemenu_next_arrow_normal"
                />
        </LinearLayout>
        <View
