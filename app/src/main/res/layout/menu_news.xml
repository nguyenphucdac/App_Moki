<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/draw_menu_news"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        >
        <FrameLayout
            android:id="@+id/news_header"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            >
            <ImageButton
                android:id="@+id/btn_menu_news"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_menu"
                android:scaleType="fitXY"
                android:background="#fff"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tin Tá»©c"
                android:textColor="@color/red_button"
                android:gravity="center"
                />

        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/red_button"
            ></View>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_news_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backround_color"
            >

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_view"
        android:layout_width="850px"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start"
        >

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>