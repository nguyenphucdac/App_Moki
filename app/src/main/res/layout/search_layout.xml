<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/icon_back"
            android:clickable="true"
            android:onClick="true"
            android:background="#fff"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="match_parent"
            android:text="Tìm kiếm"
            android:textColor="@color/red_button"
            android:gravity="center"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/btn_delete"

            android:layout_marginRight="0dp"
            android:background="#fff"
            android:scaleType="fitXY"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/red_button"
        ></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/txt_keyword"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:background="@layout/search_input_background"
            android:hint="Tìm kiếm"
            android:ems="10"
            android:textColor="@color/text_black"
            android:textSize="20dp" />
        <ImageButton
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/mic_voice"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:background="#fff"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/BORDER_COLOR"
        ></LinearLayout>
    <LinearLayout
        android:id="@+id/line_categories"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/category_icon"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh mục"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/name_category_search"
                android:layout_width="0dp"
                android:layout_weight="5.5"
                android:layout_height="wrap_content"
                android:text="Tất cả"
                android:layout_gravity="center_vertical"
                android:textColor="@color/red_button"
                android:textSize="10sp"
                android:gravity="right"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="10dp"
                android:src="@drawable/sidemenu_next_arrow_normal"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/BORDER_COLOR"
        ></LinearLayout>
    <LinearLayout
        android:id="@+id/line_brand"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/brand_icon"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhãn hiệu"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/name_category_brand"
                android:layout_width="0dp"
                android:layout_weight="5.5"
                android:layout_height="wrap_content"
                android:text="Tất cả"
                android:layout_gravity="center_vertical"
                android:textColor="@color/red_button"
                android:textSize="10sp"
                android:gravity="right"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="10dp"
                android:src="@drawable/sidemenu_next_arrow_normal"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/BORDER_COLOR"
        ></LinearLayout>
    <LinearLayout
        android:id="@+id/line_size"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/size_icon"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kích cỡ"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/name_size_search"
                android:layout_width="0dp"
                android:layout_weight="5.5"
                android:layout_height="wrap_content"
                android:text="Tất cả"
                android:layout_gravity="center_vertical"
                android:textColor="@color/red_button"
                android:textSize="10sp"
                android:gravity="right"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="10dp"
                android:src="@drawable/sidemenu_next_arrow_normal"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/BORDER_COLOR"
        ></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/product_price"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/name_price_search"
                android:layout_width="0dp"
                android:layout_weight="5.5"
                android:layout_height="wrap_content"
                android:text="Tất cả"
                android:layout_gravity="center_vertical"
                android:textColor="@color/red_button"
                android:textSize="10sp"
                android:gravity="right"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="10dp"
                android:src="@drawable/sidemenu_next_arrow_normal"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/BORDER_COLOR"
        ></LinearLayout>
    <LinearLayout
        android:id="@+id/line_state"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/status_product_icon"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/name_state_search"
                android:layout_width="0dp"
                android:layout_weight="5.5"
                android:layout_height="wrap_content"
                android:text="Tất cả"
                android:layout_gravity="center_vertical"
                android:textColor="@color/red_button"
                android:textSize="10sp"
                android:gravity="right"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="10dp"
                android:src="@drawable/sidemenu_next_arrow_normal"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/BORDER_COLOR"
        ></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/btnSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tìm kiếm"
            android:textAllCaps="false"
            android:background="@layout/search_button_search_background"
            android:textColor="#fff"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Hướng dẫn tìm kiếm"
            android:textAllCaps="false"
            android:background="@layout/login_button_skip_signup_background"
            android:textColor="@color/red_button"
            android:layout_marginLeft="170dp"
            android:layout_marginRight="30dp"
            android:textSize="11sp"
            />
    </LinearLayout>
</LinearLayout>
