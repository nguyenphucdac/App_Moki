<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backround_color"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="#fff"

        >
        <ImageButton
            android:id="@+id/product_comment_btn_back"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="40dp"
            android:src="@drawable/icon_back"
            android:background="#fff"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="Bình luận"
            android:textColor="@color/red_button"
            android:gravity="center"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="40dp"
            android:background="#fff"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/red_button"

        ></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#fff"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Hãy bình luận một cách văn minh! \n Tất cả bình luận của bạn đều được theo dõi"
            android:textColor="@color/text_black"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_product_comment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/red_button"
        >
        <EditText
            android:id="@+id/txtContentComment"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:background="@layout/comment_input_background"
            android:ems="10"
            android:textColor="#fff"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:imeOptions="actionDone"
            />
        <ImageButton
            android:id="@+id/btnComment"
            android:layout_width="10dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:src="@drawable/ic_play_dark"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:background="@color/red_button"
            />
    </LinearLayout>

</LinearLayout>
