<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/tutorial_devicebg2"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="Phù hợp với thói quen mua bán của mẹ trong thời gian mang thai, nuôi con nhỏ"
            android:textColor="@color/text_black"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="12dp"
            android:textStyle="bold"
            android:layout_marginRight="12dp"
            />
        <Button
            android:id="@+id/btn_skip_tutorial_2"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Bỏ qua"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"
            android:background="@layout/login_button_background"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

</LinearLayout>
